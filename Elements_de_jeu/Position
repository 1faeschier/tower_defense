import javafx.scene.shape.Circle;
import javafx.scene.transform.Rotate;

public class Position {
    private double x;
    private double y;

    public Position(double x, double y){
        this.x = x;
        this.y = y;

    }

    public double getX() {
        return x;
    }

    public void setX(double x) {
        this.x = x;
    }

    public double getY() {
        return y;
    }

    public void setY(double y) {
        this.y = y;
    }

    public double distance(Position P2){
        double P1X = x; double P2X = P2.getX(); double P1Y = y; double P2Y = P2.getY();
        return Math.sqrt(Math.pow(P1X-P2X, 2.0)+Math.pow(P1Y-P2Y, 2.0));
    }
    
    public boolean isonWay(Way way){
        Boolean res = false;
        ArrayList<Line> waylist = way.getWay();
        for( Line l : waylist){
            if(l.getStartX()==l.getEndX()){
                if(x == l.getEndX()-10){
                    res = true;
                }
            }
            else {
                double m = (l.getStartY()-l.getEndY())/(l.getStartX()-l.getEndX());
                double p = l.getStartY()-m*l.getStartX();
                if(y+10 == m*(x) + p){
                    res = true;
                }
            }
        }
        return res;
    }    
}
